{
  "name": "prescriber-point",
  "version": "1.0.0",
  "description": "AI-Enhanced Drug Information Publishing Platform",
  "scripts": {
    "dev": "docker-compose up --build",
    "start": "docker-compose up",
    "stop": "docker-compose down",
    "clean": "docker-compose down -v --remove-orphans",
    "logs": "docker-compose logs -f",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "install:all": "npm run install:frontend && npm run install:backend",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && npm run test",
    "test:all": "npm run test:frontend && npm run test:backend",
    "prepare": "husky",
    "heroku-prebuild": "echo 'Heroku prebuild step'",
    "heroku-postbuild": "echo 'Heroku postbuild step'"
  },
  "keywords": [
    "healthcare",
    "drug-information",
    "ai",
    "nextjs",
    "nestjs",
    "seo",
    "publishing"
  ],
  "author": "",
  "license": "MIT",
  "lint-staged": {
    "backend/**/*.{ts,js}": [
      "cd backend && npm run lint",
      "cd backend && npm run build"
    ],
    "frontend/**/*.{ts,tsx,js,jsx}": [
      "cd frontend && npm run lint",
      "cd frontend && npm run build"
    ]
  },
  "dependencies": {
    "axios": "^1.12.2"
  }
}
